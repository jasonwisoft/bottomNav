<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/linearlayout_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkbox_nIndex"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:buttonTint="@color/checkbox_color"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/IDNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="0dp"
                android:textAlignment="textStart"
                android:textColor="#232323"
                android:textSize="14sp"
                tools:text="IDNumber" />

            <TextView
                android:id="@+id/FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="First Name"
                android:textAlignment="viewStart"
                android:textColor="#595959"
                android:textSize="12sp"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/IDNumber" />

            <TextView
                android:id="@+id/lastName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                tools:ignore="MissingConstraints"
                tools:text="Last Name" />

            <TextView
                android:id="@+id/PhoneNumber"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                tools:ignore="MissingConstraints"
                tools:text="PhoneNumber" />
            <TextView
                android:id="@+id/Address"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                tools:ignore="MissingConstraints"
                tools:text="PhoneNumber" />
            <TextView
                android:id="@+id/SignatureFileName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                tools:ignore="MissingConstraints"
                tools:text="SignatureFileName" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/bottom_border_stroke"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_cardview" />
</androidx.constraintlayout.widget.ConstraintLayout>